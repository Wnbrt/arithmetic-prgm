function add(){
    let a=parseInt(document.getElementById("num1").value);
    let b=parseInt(document.getElementById("num2").value);
    let c=a+b;
    document.getElementById("button1").innerHTML="Additon of the given numbers"+c;
}
function sub(){
    let a=parseInt(document.getElementById("num1").value);
    let b=parseInt(document.getElementById("num2").value);
    let c=a-b;
    document.getElementById("button2").innerHTML="Substractiton of the given numbers"+c;
}
function mul(){
    let a=parseInt(document.getElementById("num1").value);
    let b=parseInt(document.getElementById("num2").value);
    let c=a*b;
    document.getElementById("button3").innerHTML="multiplication of the given numbers"+c;
}
function div(){
    let a=parseInt(document.getElementById("num1").value);
    let b=parseInt(document.getElementById("num2").value);
    let c=a/b;
    document.getElementById("button4").innerHTML="division of the given numbers"+c;
}
function mod(){
    let a=parseInt(document.getElementById("num1").value);
    let b=parseInt(document.getElementById("num2").value);
    let c=a%b;
    document.getElementById("button5").innerHTML="modulus of the given numbers"+c;
}
